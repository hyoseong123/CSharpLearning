<Window x:Class="BookStoreWPF_HHS.InsertWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookStoreWPF_HHS"
        xmlns:ViewModels="clr-namespace:BookStoreWPF_HHS.ViewModels"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance ViewModels:InsertBookViewModel}"
        Title="InsertWindow" Height="300" Width="400">
    <Grid>
        <Label 
            x:Name="InfoBox"
            HorizontalAlignment="Center" 
            Margin="0,93,0,0"
            VerticalAlignment="Top"/>
        <Label 
            Content="추가되었습니다."
            HorizontalAlignment="Center"
            Margin="0,159,0,0" 
            VerticalAlignment="Top"/>
        <Button 
            x:Name="CloseButton"
            Content="확인" Margin="250,199,20,35" 
            Click="CloseButtonClick"/>
    </Grid>
</Window>
